{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Sex</th>
                <th>Email</th>
                <th>Login</th>
                <th>Password</th>
                <th>ResponseRate</th>
                <th>ResponseDelay</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.role }}</td>
                <td>{{ actor.firstName }}</td>
                <td>{{ actor.lastName }}</td>
                <td>{{ actor.sex }}</td>
                <td>{{ actor.email }}</td>
                <td>{{ actor.login }}</td>
                <td>{{ actor.password }}</td>
                <td>{{ actor.responseRate }}</td>
                <td>{{ actor.responseDelay }}</td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Create new</a>
{% endblock %}
